<%- include("partials/header") %>


<!-- Header starts here -->
<div class="space-100"></div>
<div class="container">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="/login">Login</a></li>
			<li class="breadcrumb-item active" aria-current="page">Forgot_password</li>
		</ol>
	</nav>
</div>

<div class="container">

	<form action="/reset/<%= token %>" method="POST">

		<div class="form-group">
			<label for="password">Enter new password</label>
			<input name="password" type="password" id="pass" class="form-control" required>
		</div>

		<div class="form-group">
			<label for="password">Confirm new password</label>
			<input name="confirm" type="password" id="confirm" class="form-control" required>
		</div>

		<button id="register" class="btn btn-dark">
			Reset
		</button>
		<br><br>



	</form>

</div>

<%- include("partials/footer") %>

